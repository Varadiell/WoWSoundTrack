			<AbsInset left="11" right="12" top="12" bottom="11"/>
		</BackgroundInsets>
		<TileSize>
			<AbsValue val="32"/>
		</TileSize>
		<EdgeSize>
			<AbsValue val="32"/>
		</EdgeSize>
	</Backdrop>
	<Layers>
		<Layer level="BACKGROUND">
			<Texture file="Interface\AchievementFrame\UI-Achievement-Parchment-Horizontal" parentKey="background">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="3" y="-3"/>
						</Offset>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-3" y="3"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>						
		</Layer>
		<Layer level="ARTWORK">
			<Texture file="Interface\DialogFrame\UI-DialogBox-Gold-Header">
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="12"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
			<Texture file="Interface/ACHIEVEMENTFRAME/UI-Achievement-Reward-Background">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
			<Texture file="Interface/ACHIEVEMENTFRAME/UI-Achievement-Reward-Background">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="140" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
			<Texture file="Interface/ACHIEVEMENTFRAME/UI-Achievement-Reward-Background">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="140" y="90"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
		</Layer>
		<Layer level="OVERLAY">
			<FontString inherits="GameFontHighlightSmall" text="WoW SoundTrack">
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-3"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString inherits="GameFontHighlightMedium" text="Choisissez une musique à jouer :">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="81" y="-42"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString inherits="GameFontHighlightMedium" text="Lecture en cours">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-140" y="-42"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString inherits="GameFontHighlightMedium" text="Commandes">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-152" y="105"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
	<Frames>
		<Button name="CloseButton" inherits="UIPanelCloseButton">
			<Anchors>
				<Anchor point="TOPRIGHT" x="-3" y="-3"/>
			</Anchors>
			<Scripts>
				<OnClick> ButtonCloseFunction(); </OnClick>
			</Scripts>
		</Button>
	</Frames>
</Frame>



<Button name="MyModEntryTemplate" virtual="true">
	<Size>
		<AbsDimension x="340" y="16" />
	</Size>
